<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.mq.captiway.scheduler.beans.Messages" table="messages">
    <id name="id" type="java.lang.Long">
      <column name="id"/>
      <generator class="native"/>
    </id>
    <property name="module" type="string">
      <column name="module" length="50" not-null="true"/>
    </property>
    <property name="subject" type="string">
      <column name="subject" length="200" not-null="true"/>
    </property>
    <property name="message" type="string">
      <column name="message" length="2000" not-null="true"/>
    </property>
    <property name="createdDate" type="calendar">
      <column name="Created_date" />
    </property>
	<property name="folder" type="string">
      <column name="folder"  length="50"/>
    </property>
	<property name="read" type="boolean">
      <column name="read_flag" />
    </property>
    <property name="type" type="string">
      <column name="type" length="50" />
    </property>
   <many-to-one name="users" class="org.mq.captiway.scheduler.beans.Users" foreign-key="userId"  fetch="select">
      <column name="user_id" not-null="true"/>
    </many-to-one> 
  </class>
</hibernate-mapping>
