						}else {
							logger.debug("low credits with user...");
							return mobileStatus;
							
						}
						
					}//if
				}//if
				else {
					
					if(existingContact != null) {
						
						if(existingContact.getMobilePhone() != null && isDifferentMobile ){
							
							existingContact.setMobileStatus(Constants.CON_MOBILE_STATUS_ACTIVE);
