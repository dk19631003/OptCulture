/var/log/httpd/*log {
    missingok
    notifempty
    sharedscripts
    delaycompress
    postrotate
        /sbin/service httpd reload > /dev/null 2>/dev/null || true
    endscript
}

/optdata/httpdlogs/access_log
        {   
		
		su root root
		copytruncate
                rotate 7   
                compress   
                missingok   
                size 256M 
                 postrotate
                                echo "" > /optdata/httpdlogs/access_log
                endscript
        
        }

/optdata/httpdlogs/error_log
        {   
	
		su root root
		copytruncate
                rotate 7   
                compress   
                missingok   
                size 256M 
                 postrotate
                                echo "" > /optdata/httpdlogs/error_log
                endscript
        
        }


